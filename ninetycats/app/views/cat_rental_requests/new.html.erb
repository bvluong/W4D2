<h1> Rent a new cat! </h1>

<form  action= "<%=cat_rental_requests_url%>" method="post">

  <label for="cat_id">Cat ID</label>
  <select name="cat_rental_request[cat_id]">
    <option value="" disabled selected>Please select cat id</option>
    <% @cats.each do |cat| %>
      <option value= "<%=cat.id%>" ><%= cat.id %></option>
    <% end %>
  </select>

  <br></br>

  <label for="start_date">Start Date</label>
  <input type="date" name="cat_rental_request[start_date]" value>

  <br> </br>

  <label for="end_date">End Date</label>
  <input type="date" name="cat_rental_request[end_date]" value>

  <br> </br>

  <input type="submit" value="Submit your request!">

</form>
